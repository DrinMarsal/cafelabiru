<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Menu"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="16dp"
            android:padding="20dp">

            <AutoCompleteTextView
                android:id="@+id/etMenuCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:hint="Pilih Kategori"
                android:dropDownHeight="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:clickable="true"
                android:minHeight="48dp" />

            <EditText
                android:id="@+id/etMenuName"
                android:hint="Nama Makanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etMenuDesc"
                android:hint="Deskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="48dp"/>

            <EditText
                android:id="@+id/etMenuPrice"
                android:hint="Harga"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnPickImage"
            android:text="Pilih Gambar"
            android:background="@drawable/bg_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:minHeight="48dp"/>

        <Button
            android:id="@+id/btnSaveMenu"
            android:text="Simpan Menu"
            android:background="@drawable/bg_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:minHeight="48dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
            android:id="@+id/btnBackMenu"
            android:background="@drawable/baseline_arrow_back_24"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="58dp"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:id="@+id/textBackMenu"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical"
            android:text="Back"
            android:textColor="@color/color_700"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>